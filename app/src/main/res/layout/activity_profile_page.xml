<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfilePage">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="40dp"
            android:text="Skip"
            android:textColor="@color/pink"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:text="Profile details"
            android:textColor="@color/black"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="34sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="99dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="91dp"
            android:layout_marginBottom="53dp">

            <androidx.cardview.widget.CardView
                android:layout_width="99dp"
                android:layout_height="99dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/pp"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:src="@color/black" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cameraBtn"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"
                app:cardMaxElevation="5dp"
                app:cardCornerRadius="26dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">


                <RelativeLayout
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:gravity="bottom"
                    >

                    <ImageView
                        android:id="@+id/oval"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/oval" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="14dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/camera" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="295dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:id="@+id/firstnameField"
            android:layout_marginBottom="14dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:background="@drawable/white_background"
                android:text="First name"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/firstField"
                android:layout_width="295dp"
                android:layout_height="58dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@drawable/image_round_corner"
                android:hint="David"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="295dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:id="@+id/lastnameField"
            android:layout_marginBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last name"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/white_background"
                    android:layout_alignParentTop="true"
                    android:textSize="12sp"/>



            <EditText
                android:id="@+id/lastField"
                android:layout_width="295dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:background="@drawable/image_round_corner"
                android:layout_alignParentBottom="true"
                android:hint="Peterson"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingStart="20dp"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/calenderBtn"
            android:layout_width="295dp"
            android:layout_height="58dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#e8bac0"
            android:layout_gravity="center">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/calendar"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Choose birthday date"
                android:textColor="@color/pink"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/submitBtn"
            android:layout_gravity="center"
            android:layout_width="295dp"
            android:layout_height="56dp"
            app:cardBackgroundColor="#E94057"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="88dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>