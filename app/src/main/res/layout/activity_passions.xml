<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Passions">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/backBtn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="32dp"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:src="@drawable/backbtn"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/skip"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="40dp"
            android:text="Skip"
            android:textColor="@color/pink"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your interests"
            android:textColor="@color/black"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="34sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:text="Select a few of your interests and let everyone know what youâ€™re passionate about."
            android:layout_marginStart="40dp"
            android:textSize="14sp"
            android:layout_marginBottom="32dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/photoCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:background="@drawable/pic_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/phototxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photography"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/shopCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
               >
                <ImageView
                    android:id="@+id/shopImg"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:src="@drawable/shop_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/shopTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Shopping"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/musicCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >

                <ImageView
                    android:id="@+id/musicImg"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:src="@drawable/voice_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/musicTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karaoke"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="40dp"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/yogaCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >
                <ImageView
                    android:id="@+id/yogaImg"
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:background="@drawable/yoga_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/yogaTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Yoga"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center_vertical"

                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/cookCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >

                <ImageView
                    android:id="@+id/cookImg"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:src="@drawable/cook"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/cookTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cooking"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="40dp"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/tennisCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >
                <ImageView
                    android:id="@+id/tennishImg"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:src="@drawable/balls_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tennishTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tennis"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/runCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >

                <ImageView
                    android:id="@+id/runImg"
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:src="@drawable/running_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/runTxt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Run"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="40dp"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/swimCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >
                <ImageView
                    android:id="@+id/swipImg"
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:src="@drawable/swimming"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/swimTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Swimming"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center_vertical"

                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/artcard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >

                <ImageView
                    android:id="@+id/artImg"
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:background="@drawable/paint_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/artTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Art"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="40dp"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/travelcard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >
                <ImageView
                    android:id="@+id/travelImg"
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:background="@drawable/mountain_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/travelTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Traveling"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/externalCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >

                <ImageView
                    android:id="@+id/externalImg"
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:background="@drawable/extreme"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/externalTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extreme"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="40dp"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/gaanaCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >
                <ImageView
                    android:id="@+id/gaanaImg"
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:src="@drawable/music"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/gaanaTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Music"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center_vertical"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/daaruCard"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >

                <ImageView
                    android:id="@+id/daaruImg"
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:src="@drawable/cheers_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/daaruTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drink"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="40dp"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/adhunik_Khel"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="45dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="15dp"
                >
                <ImageView
                    android:id="@+id/adhunik_KhelImg"
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:background="@drawable/console_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/adhunik_KhelTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Video games"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center_vertical"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/submitBtn"
            android:layout_gravity="center"
            android:layout_width="295dp"
            android:layout_height="56dp"
            app:cardBackgroundColor="#E94057"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="88dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Continue"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>