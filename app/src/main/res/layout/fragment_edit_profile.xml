<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.EditProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rLayout"
                tools:ignore="MissingConstraints">


                <ImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="match_parent"
                    android:layout_height="415dp"
                    android:scaleX="1.4"
                    android:src="@drawable/photo" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/backBtn"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="32dp"
                    android:alpha="0.5"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:src="@drawable/backbtn"/>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="336dp">

                    <RelativeLayout
                        android:layout_marginTop="46dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_corner_popup"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/userName"
                            android:layout_width="250dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="90dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/text_drawable"
                            android:padding="5dp"
                            android:hint="Jessica Parker, 23"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/occupationTxt"
                            android:layout_width="250dp"
                            android:layout_height="38dp"
                            android:layout_below="@+id/userName"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/text_drawable"
                            android:padding="5dp"
                            android:hint="Proffesional model"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/locationTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/occupationTxt"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="30dp"
                            android:text="Location"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/locationBtn"
                            android:layout_width="61dp"
                            android:layout_height="34dp"
                            android:layout_below="@+id/occupationTxt"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="40dp"
                            android:layout_marginEnd="40dp"
                            app:cardCornerRadius="7dp"
                            app:cardElevation="4dp"
                            app:cardPreventCornerOverlap="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/location"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1 km"
                                    android:textSize="12sp"
                                    android:textColor="@color/pink"
                                    android:layout_gravity="center" />

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>

                        <EditText
                            android:id="@+id/locationAddTxt"
                            android:layout_width="250dp"
                            android:layout_height="38dp"
                            android:layout_below="@+id/locationTxt"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/text_drawable"
                            android:padding="5dp"
                            android:hint="Chicago, IL United States"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_below="@+id/locationAddTxt"
                            android:textColor="@color/black"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="30dp"/>

                        <EditText
                            android:id="@+id/aboutDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="40dp"
                            android:background="@drawable/text_drawable"
                            android:padding="5dp"
                            android:hint="My name is Jessica Parker and I enjoy meeting new people and finding ways to help them have an uplifting experience. I enjoy reading.."
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/readMoreTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/aboutDesc"
                            android:layout_marginLeft="40dp"
                            android:text="Read more"
                            android:textColor="@color/pink"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/interestTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interests"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_below="@+id/readMoreTxt"
                            android:textColor="@color/black"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="30dp"/>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/interestRV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/interestTxt"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="3" />


                        <TextView
                            android:id="@+id/gallaryTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/interestRV"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="30dp"
                            android:text="Gallery"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />



                        <TextView
                            android:id="@+id/seeallTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_below="@+id/interestRV"
                            android:textColor="@color/pink"
                            android:layout_marginRight="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="40dp"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/gallaryRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/gallaryTxt"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="3"
                            android:layout_marginBottom="70dp"/>


                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/submitBtn"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardBackgroundColor="#E94057"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="70dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
               >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Save"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</FrameLayout>