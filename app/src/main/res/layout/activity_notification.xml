<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Notification">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="40dp"
            android:text="Skip"
            android:textColor="@color/pink"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/notify"
            android:layout_marginEnd="67dp"
            android:layout_marginStart="67dp"
            android:layout_gravity="center"
            android:layout_marginTop="98dp"
            android:layout_marginBottom="84dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable notificationâ€™s"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:text="Get push-notification when you get the match or receive a message."
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="100dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/submitBtn"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="56dp"
            app:cardBackgroundColor="#E94057"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="50dp"
            app:cardElevation="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="I want to be notified"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </LinearLayout>

  >
</LinearLayout>